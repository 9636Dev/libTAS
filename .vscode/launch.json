    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/program/libTAS",
            "args": [
                "--libtas-so-path",
                "${workspaceFolder}/src/library/libtas.so"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/src/program/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "make"
        }
    ]
}